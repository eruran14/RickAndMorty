<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ImageView
        android:id="@+id/char_image"
        android:layout_width="150dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/char_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alive"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/char_image"
        app:layout_constraintTop_toBottomOf="@id/char_image"
        android:layout_marginTop="16dp"
        />
    <TextView
        android:id="@+id/char_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rick_sanchez"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/char_status"
        app:layout_constraintTop_toBottomOf="@id/char_status"
        />



</androidx.constraintlayout.widget.ConstraintLayout>